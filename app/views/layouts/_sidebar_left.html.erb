<div class="flex flex-col w-full pl-6 2xl:pl-16 sm:pt-6">
  <ul class="flex flex-col gap-y-5">
    <li class="flex items-center mb-2">
      <% if current_user.profile_photo.attached? %>
        <%= image_tag current_user.profile_photo, class: "rounded-full w-11 h-11" %>
      <% else %>
        <i class="fa-regular fa-user text-center text-xl rounded-full w- h-11"></i>
      <% end %>
      <span class="ml-2 text-md font-medium"><%= current_user.username %></span>
    </li>
    <li class="font-medium flex items-center">
      <i class="fa-solid fa-user-group w-12 pr-4 bg-clip-text text-xl text-transparent bg-gradient-to-r from-blue-600 to-cyan-300"></i>
      Friends
    </li>
    
    <li class="font-medium flex items-center">
      <i class="fa-regular fa-clock w-12 pr-4 bg-clip-text text-2xl text-transparent bg-gradient-to-b from-blue-600 to-sky-200"></i>
      Memories
    </li>

    <li class="font-medium flex items-center">
      <i class="fa-solid fa-bookmark w-12 pr-4 bg-clip-text text-2xl text-transparent bg-gradient-to-br from-pink-400 to-purple-700"></i>
      Saved
    </li>
    <li class="font-medium flex items-center">
      <i class="fa-solid fa-people-group w-12 pr-4 bg-clip-text text-2xl text-transparent bg-gradient-to-b from-sky-400 to-blue-700"></i>
      Groups
    </li>
    <li class="font-medium flex items-center">
      <i class="fa-solid fa-clapperboard w-12 pr-4 bg-clip-text text-2xl text-transparent bg-gradient-to-br from-teal-200 to-blue-700"></i>
      Video
    </li>
  </ul>
</div>