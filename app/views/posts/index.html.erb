<div class="flex">
  
  <div class="hidden lg:flex w-full min-w-[280px] max-w-[350px] p-5 text-left">
    <%= render "sidebar_left" %>
  </div>
  
  <div class="flex-grow shrink mx-auto md:px-2 max-w-[850px] text-center">
    <section>
      <div>
        <%= render 'new_post_card' %>
      </div>
    </section>
    <section>
      <%= turbo_frame_tag "posts", class: "my-10" do %>
        <%= render 'posts' %>
      <% end %>

      <%= turbo_frame_tag "pagination",
        loading: :lazy,
        src: user_posts_path(@user ,format: :turbo_stream, page: (@pagy.next || 1)) %>
    </section>
  </div>
  
  <div class="hidden xl:flex w-full min-w-[280px] max-w-[350px] p-5 text-right">
    <%= render "sidebar_right" %> 
  </div>

</div>      

