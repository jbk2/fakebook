<div class="flex mt-2 md:mt-6">
  <div class="form-content p-5 pr-0 xl:pl-20 w-[280px]">
    <h2 class="text-lg font-bold mb-4">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "w-[380px]", data: { turbo: false } }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field my-2">
        <%= f.label :username %><br />
        <%= f.text_field :username, autofocus: true, required: true, autocomplete: "username", class: "input input-bordered" %>
      </div>
      
      <div class="field my-2">
        <%= f.label :profile_photo %><br/>
        <%= f.file_field :profile_photo, class: "w-100" %>
      </div>

      <div class="field my-2">
        <%= f.label :email %><br />
        <%= f.email_field :email, autocomplete: "email", class: "input input-bordered" %>
      </div>

      <div class="field my-2">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> chars minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered" %>
      </div>

      <div class="field my-2">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-sm btn-primary my-2" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
  <div class="welcome-content p-5 pl-0 mx-auto">
    <%= render 'layouts/welcome' %>
  </div>
</div>