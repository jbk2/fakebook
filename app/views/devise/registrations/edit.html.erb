<div class="p-5">
  <h2 class="text-lg font-bold mb-4">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field my-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered" %>
    </div>
    
    <div class="field my-3">
      <%= f.label :username %><br />
      <%= f.text_field :username, required: true, autocomplete: "username", class: "input input-bordered" %>
    </div>
    
    <div class="field my-3">
      <%= f.label :profile_photo %><br />
      <% if resource.profile_photo.attached? %>
        <%= image_tag resource.profile_photo, width: 100, height: 100 %>
        <span class="inline-block mt-2">Current file: '<%= resource.profile_photo.filename %>'</span><br>
      <% else %>
        <p>No file uploaded</p><br>
      <% end %>
      <%= f.file_field :profile_photo, required: true %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field my-3">
      <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered" %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>

    <div class="field my-3">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered" %>
    </div>

    <div class="field mt-3">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input input-bordered" %>
    </div>

    <div class="actions mb-6">
      <%= f.submit "Update", class: "btn btn-sm btn-primary my-2" %>
    </div>
  <% end %>

  <h3 class="text-md font-bold mt-4 mb-2">Cancel my account</h3>

  <div class="">
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "link" %>
  </div>

  <%= link_to "Back", :back, class: "link" %>
</div>